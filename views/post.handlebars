<article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
        <span>({{post_url}})</span>
        <div class ="blog-text">
            {{blog_text}}
        </div>
    </div>
    <div class="meta">
        Posted by {{user.username}} on 
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>       
</article>



