<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="/post/{{id}}">{{post.title}}</a>
                <span>({{post.post_url}})</span>
                <div class ="blog-text">
                    {{post.blog_text}}
                </div>
            </div>
            <div class="meta">
                Posted by {{post.user.username}} on 
                {{post.created_at}}
                |
                <a href="/post/{{id}}">{{post.comments.length}} comment(s)</a>
            </div>           
        </article>
    </li>
    {{/each}}
</ol>